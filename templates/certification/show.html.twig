{% extends 'base.html.twig' %}

{% block title %}Certification{% endblock %}

{% block body %}
    <h1>Certification</h1>

    <table class="table vertical-table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ certification.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ certification.name }}</td>
            </tr>
            <tr>
                <th>Field</th>
                <td>{{ certification.field }}</td>
            </tr>
            <tr>
                <th>StringMarksAllowed</th>
                <td>{{ certification.stringMarksAllowed ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>MarkDescription</th>
                <td>{{ certification.markDescription }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_certification_index') }}">back to list</a>

    <a href="{{ path('app_certification_edit', {'id': certification.id}) }}">edit</a>

    {{ include('certification/_delete_form.html.twig') }}
{% endblock %}
