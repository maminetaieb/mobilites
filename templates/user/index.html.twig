{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
<h1>User index</h1>

<table class="table horizontal">
    <thead>
        <tr>
            <th>Id</th>
            <th>Email</th>
            <th>Password</th>
            <th>Name</th>
            <th>actions</th>
        </tr>
    </thead>
    <tbody>
        {% for user in users %}
        <tr>
            <td>{{ user.id }}</td>
            <td>{{ user.email }}</td>
            <td>{{ user.password }}</td>
            <td>{{ user.name }}</td>
            <td>
                <a href="{{ path('app_user_show', {'id': user.id}) }}">show</a>
                {% if institution is defined and app.user.institution is not null and institution.id == app.user.institution.id and app.user != user %}
                {% if user.institution is null %}
                <a href="{{ path('app_institution_edit_managers_add', {'id': institution.id, 'mid': user.id}) }}">
                    Add Manager
                </a>
                {% else %}
                <a href="{{ path('app_institution_edit_managers_remove', {'id': institution.id, 'mid': user.id}) }}">
                    Remove Manager
                </a>
                {% endif %}
                {% endif %}
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="5">no records found</td>
        </tr>
        {% endfor %}
    </tbody>
</table>

<a href="{{ path('app_user_new') }}">Create new</a>
{% endblock %}