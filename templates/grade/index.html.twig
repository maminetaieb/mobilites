<!DOCTYPE html>

<title>Grade index</title>

{% block body %}
    <h1>Grade index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for grade in grades %}
            <tr>
                <td>{{ grade.id }}</td>
                <td>{{ grade.name }}</td>
                <td>
                    <a href="{{ path('app_grade_show', {'id': grade.id}) }}">show</a>
                    <a href="{{ path('app_grade_edit', {'id': grade.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_grade_new') }}">Create new</a>
{% endblock %}
