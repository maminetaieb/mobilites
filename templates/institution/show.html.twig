{% extends 'base.html.twig' %}

{% block title %}Institution{% endblock %}

{% block body %}
<h1>Institution</h1>

<table class="table vertical">
    <tbody>
        <tr>
            <th>Photo</th>
            <td><img src="{{ institution.photoUrl }}"></td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ institution.name }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ institution.description }}</td>
        </tr>
        <tr>
            <th>Location</th>
            <td>{{ institution.location }}</td>
        </tr>
        <tr>
            <th>Website</th>
            <td><a href="{{ institution.website }}">{{ institution.website }}</a></td>
        </tr>
    </tbody>
</table>

<a href="{{ path('app_institution_index') }}">back to list</a>

{% if app.user.institution == institution %}
<a href="{{ path('app_institution_edit', {'id': institution.id}) }}">edit</a>
{{ include('institution/_delete_form.html.twig') }}
{% endif %}

{% if app.user.institution == institution %}
<a href="{{ path('app_grade_new') }}">Add new grade</a>
{% endif %}
{% include 'grade/index.html.twig' with {'grades': institution.grades} %}

{% if app.user.institution == institution %}
<a href="{{ path('app_mobility_new') }}">Add new mobiltiy</a>
{% endif %}
{% include "mobility/index.html.twig" with {'includedIn': 'institution/show', 'mobilities': institution.mobilities} %}

{% endblock %}